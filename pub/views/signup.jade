div.container_16
  header#banner.grid_16(role='banner')
    h3.main= title
    h3.info= titleInfo
  div#content.login.grid_16
    form(method='post', action='/users')
      fieldset
        div.message
          span.info= flash.info
          span.warn= flash.warn
          span.error= flash.error

        input(type='text', name='user[name]', placeholder='username', value=user.name)
        input(type='password', name='user[pass]', placeholder='password')
        input(type='password', name='user[pass2]', placeholder='password - again')
        input(type='submit', value='create')


