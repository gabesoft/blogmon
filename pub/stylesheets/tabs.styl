ul.tabs
  display: block
  padding: 0

ul.tabs li
  display: block
  float: left

ul.tabs li a
  display: block
  text-decoration: none
  width: auto
  border: 1px solid color-black
  color: color-font
  padding: 5px 20px

ul.tabs li a.active
  position: relative
  color: color-tab-active
  background: none repeat scroll 0 0 rgba(0, 0, 0, 0.3)
  box-shadow(tab-active-shadow)

ul.tabs:after
  clear: both
