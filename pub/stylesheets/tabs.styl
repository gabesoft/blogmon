.tabs
  display: block
  padding: 0

.tabs 
  display: block
  float: left

.tabs a
  display: block
  text-decoration: none
  border: 1px solid color-black
  color: color-font
  padding: 5px 20px

.tabs a.active
  color: color-tab-active
  background: none repeat scroll 0 0 rgba(0, 0, 0, 0.3)
  box-shadow(tab-active-shadow)

.tabs:after
  clear: both
