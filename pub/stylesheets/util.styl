box-shadow-clear()
  box-shadow(0, 0, 0, 0)

line(orientation, width)
  if not orientation
    border 0
    box-shadow-clear()
  else
    border-{orientation}: width solid #121212

    if orientation == 'bottom' || orientation == 'top'
      box-shadow(0, 1px, 0, rgba(255, 255, 255, 0.07))
    else 
      border-left: width solid #121212
      box-shadow(1px, 0, 0, rgba(255, 255, 255, 0.07))

line-clear()
  line('', 0)

font-face(family, font, path)
  @font-face
    font-family: family
    src: url(path + font + '.eot')
    src: url(path + font + '.eot?#iefix') format('embedded-opentype'), url(path + font + '.woff') format('woff'), url(path + font + '.ttf') format('truetype'), url(path + font + '.svg#' + family) format('svg')
    font-weight: normal
    font-style: normal
