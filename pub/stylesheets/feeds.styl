#feeds-edit
  input.search
    padding 5px 10px 5px 10px
    width 300px
    margin 10px 0 10px 0
    font-size 16px

  input.subscribe
    font-size 16px

#feeds-list
  li
    margin 10px 0 5px 0
    padding 5px 5px 5px 0
    line(bottom, 1px, solid)

  input.view
    display none

  a.title
    font-family font-heading

  div.header
    display block

  div.text
    display inline

  div.delete
    border-radius 20px
    padding 4px 4px 0px 6px
    font-size 20px
    display inline-block
    float right

  div.delete:hover
    color color-red
    border 1px solid color-red

  h4.title
    display inline

  h4.author
    padding-right 10px
    display inline
    color color-wheat

  h5.description
    display inline-block
    color color-font
