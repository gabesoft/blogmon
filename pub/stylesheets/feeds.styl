#feeds-edit
  border 1px solid color-link
  padding 10px

  input.search
    font-family font-input
    padding 5px 10px 5px 10px
    width 100%
    margin 10px 0 5px 0
    font-size 16px

  div.button
    font-family font-input

  div.button.search.processing
    border 1px solid color-sienna
    color color-sienna

#feeds-list
  border 1px solid color-link
  padding 10px
  margin-bottom 40px
  margin-top 5px

  li
    padding 10px
    line('bottom', 1px)

  li:last-child
    line-clear()

  li.list-header
    line('bottom', 2px)
    .header
      display inline-block
      color color-heading

  .iconic
    display inline-block
    cursor pointer
    padding-top 10px

  .delete
    font-size icon-size-large
    padding-right 2px
    float right
    color color-input-light

  .delete:hover
    color color-red

  .vis
    font-size icon-size
    padding-right 10px
    padding-left 10px
    color color-light-green

  .vis.unchecked
    color color-input-light

  .vis.partial
    color color-gray-green

  .text
    display inline

  .title
    display inline
    text-decoration none
    color color-font

  .title:hover
    color color-link

  h4.author
    padding-right 10px
    display inline
    color color-wheat

  h5.description
    display none

  h5.description.error
    display inline-block
    color color-red
