#posts-content
  .post-content
    margin-top 5px
    margin-bottom 10px

  .collapsed
    .header
      border 1px solid color-sienna
      padding 10px 10px 10px 10px
    .header:hover
      border 1px solid color-khaki
    .header-inner
      padding 0
      line-clear()
    .description
      display none

  .expanded
    .header
      padding 10px 10px 5px 10px
    .header-inner
      padding-bottom 10px
      line('bottom', 1px)

  .header
    border 1px solid color-sienna
    border-bottom 0
    cursor pointer

  .description
    border 1px solid color-sienna
    border-top 0
    padding 10px

  .left
    display inline-block

  h4
    a
      text-decoration none
      cursor normal
      color color-heading
      pointer-events none

  h5
    color color-khaki

  .right
    float right
    display inline-block

    .date
      display inline-block
      margin-right 10px
      color color-khaki

    .iconic
      color color-sienna
      font-size 1.5em
      text-decoration none

    .iconic:hover
      color color-khaki
      cursor pointer

