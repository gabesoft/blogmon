@keyframes rotate {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}

#posts-content
  margin-bottom 20px

  #loader
    display none
    line-height 0
    z-index 10
    font-size 80px
    color color-khaki

    position fixed
    bottom 40px
    right 40px

    animation(rotate)
    animation-duration(1.0s)
    animation-iteration-count(infinite)
    animation-timing-function(linear)

  .post-content
    margin-top 5px
    margin-bottom 10px

  .description
    a
    img
    div
    object
    video
      margin 0 !important
      padding 0 !important
      width auto !important
      height auto !important
      max-width 100% !important

  .collapsed
    .header
      border 1px solid color-sienna
      padding 10px 10px 10px 10px
    .header:hover
      border 1px solid color-khaki
    .header-inner
      padding 0
      line-clear()
    .description
      display none
    .loader
      display none

  .collapsed.processing
    background color-gray

    .right
      .iconic
        visibility hidden

    .loader
      display block
      float left
      margin 0 10px 0 0
      z-index 10

  .expanded
    .header
      padding 10px 10px 5px 10px
    .header-inner
      padding-bottom 10px
      line('bottom', 1px)

    .loader
      display none

  .header
    border 1px solid color-sienna
    border-bottom 0
    cursor pointer

  .description
    border 1px solid color-sienna
    border-top 0
    padding 10px

    span.content
      display block
      margin-bottom 5px

  .title
     a
        text-decoration none
        cursor normal
        color color-heading
        pointer-events none

  div.bottom-bar
    background color-star-inactive

    .toggle-bottom
      display inline-block
      margin-right 5px
      font-size icon-size
      padding 6px 2px 2px 10px
      cursor pointer

    .left
      display block
      padding-left 3px

  div.top-bar
    background color-star-inactive
    margin-bottom 5px
    padding-bottom 2px

    .flag
    .toggle-top
    .post-link
      display inline-block
      margin-right 5px
      font-size icon-size
      padding 7px 2px 2px 10px
      cursor pointer
    a
      text-decoration none
      color color-font
      font-size icon-size

    .left
      display block
      padding-left 3px

      .feed-title
        display inline-block
        color color-khaki
        line-height 1em
        vertical-align top
        padding-top 7px
  
      span.flag
        display inline-block
        font-size icon-size
        color color-star-inactive

      span.flag.red
        color color-orange-red

      span.flag.blue
        color color-link
      
      span.flag.gray
        color color-gray

    .right
      display block
      float right

      .date
        display inline-block
        color color-font
        float right
        line-height 1em
        vertical-align top
        padding-top 7px
        margin-right 5px
