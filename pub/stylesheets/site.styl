@import 'nib/vendor'
@import './variables'
@import './util'
@import './reset'
@import './fonts'
@import './grid96016'
@import './typography'
@import './tabs'

#banner
  line(bottom, 3px, solid)

  padding-top 10px

  h3.main
    display inline-block
    color color-sienna

  h3.info
    float right
    display inline-block

  a
    color color-khaki

#tabs-nav
  width 100%
  padding 10px 0 10px 0
  margin-left auto
  margin-right auto
  display inline-block
  line(bottom, 1px, solid)

#posts-content
  margin-top 30px

  .post-content
    margin-top 5px
    margin-bottom 10px

  .collapsed
    display none

  .header
    border 1px solid color-sienna
    padding 5px

  .description
    margin-top 2px
    border 1px solid color-khaki
    padding 5px

